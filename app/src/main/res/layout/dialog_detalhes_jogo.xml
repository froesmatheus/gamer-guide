<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:background="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/tvNomeJogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="Nome do Jogo"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNomeProdutura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNomeJogo"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="Nome da Produtora" />

        <TextView
            android:id="@+id/tvNomePublicadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNomeProdutura"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="Nome da Publicadora" />

        <TextView
            android:id="@+id/tvGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvNomePublicadora"
            android:layout_alignStart="@+id/tvNomePublicadora"
            android:layout_below="@+id/tvNomePublicadora"
            android:layout_marginBottom="5dp"
            android:text="Gênero do jogo" />

        <TextView
            android:id="@+id/tvDataLancamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvGenero"
            android:layout_alignStart="@+id/tvGenero"
            android:layout_below="@+id/tvGenero"
            android:text="Data de lançamento" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição do jogo blablablabla felipe é otário blablabla jogo fulero hypado mas n vale merda" />
    </LinearLayout>
</LinearLayout>