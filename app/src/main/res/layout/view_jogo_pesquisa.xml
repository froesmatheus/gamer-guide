<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="110dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivCapaJogo"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivCapaJogo"
            android:layout_toRightOf="@+id/ivCapaJogo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNomeJogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome_do_jogo"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDataLancamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data de LanÃ§amento" />

            <TextView
                android:id="@+id/tvPlataformas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plataformas" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
