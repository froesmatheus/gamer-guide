<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivCapaJogo"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/cardview_dark_background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/ivCapaJogo"
        android:layout_toRightOf="@+id/ivCapaJogo"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNomeJogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome_do_jogo"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horas_jogadas" />

        <TextView
            android:id="@+id/tvHorasJogadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 horas"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPlataformas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progresso" />

        <TextView
            android:id="@+id/tvPorcentagemProgresso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30%"
            android:textStyle="bold" />

    </LinearLayout>


    <ImageView
        android:id="@+id/ivOverflowMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivCapaJogo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingEnd="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        app:srcCompat="@drawable/ic_mais" />
</RelativeLayout>