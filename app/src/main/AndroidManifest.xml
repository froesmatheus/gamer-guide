<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matheusfroes.gamerguide">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.TelaPrincipalActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".activities.ConfiguracoesFeedActivity"
            android:label="@string/configuracoes_feed"
            android:parentActivityName=".activities.FeedActivity" />
        <activity
            android:name=".activities.AdicionarJogosActivity"
            android:label="@string/adicionar_jogos"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.MeusJogosActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.DetalhesJogoActivity"
            android:label="@string/title_activity_detalhes_jogo"
            android:theme="@style/AppTheme.DetalhesJogo" />
        <activity
            android:name=".activities.DetalhesListaActivity"
            android:parentActivityName=".activities.ListasActivity" />

        <activity
            android:name=".activities.CapaJogoTelaCheiaActivity"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".activities.BaseActivity" />
        <activity
            android:name=".activities.FeedActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ListasActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.EstatisticasActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CalendarioActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MeusJogosActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>